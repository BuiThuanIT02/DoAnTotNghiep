    <style>
        body {
            background-color: #f5f7f8;
            height: 100vh;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /*#product*/ .product-item {
            padding: 0;
            border: 1px solid black;
            border-radius: 2%;
            margin: 10px;
            width: 250px;
            height: 390px;
            /*overflow: hidden;
                    position: relative;*/
        }

            .product-item a img {
                display: block;
                width: 100%;
                height: 304px;
            }


        /*      #product .product-item img {
                        transition: all 1s ease;
                    }

                        #product .product-item img:hover {
                            transform: scale(1.1);
                        }
                 */
        #product .product-item:hover,
        #product-category .product-item:hover,
        .cateBook-together .product-item:hover {
            border: 1px solid #ff8a25;
            box-shadow: 0 2px 20px 0 #ccc;
        }

        .product-item .product-name {
            text-align: center;
            white-space: nowrap; /* Ngăn ngừng dòng */
            overflow: hidden; /* Ẩn phần vượt quá kích thước của phần tử cha */
            text-overflow: ellipsis; /* Thêm dấu "..." khi dòng vượt quá */
            margin-bottom:0;
         
        }
        .product-item .price-sale{
            color:gray;
        }
        /*********************************
        6. Product Details
        *********************************/
        .star_rating {
            display: flex;
            /* padding:2px;*/
            /*margin-left: 33px;*/
        }

            .star_rating li {
                display: inline-block;
                margin-right: -2px;
                cursor: pointer;
            }

                .star_rating li i {
                    color: #fac451;
               
                }


        /*********************************
        7.3 Reviews
        *********************************/

        .reviews_title {
            margin-bottom: 58px;
        }

        .user_review_container {
            width: 100%;
            margin-bottom: 37px;
        }

        .reviews_col {
            padding-right: 30px;
        }

        .user_pic {
            width: 70px;
            height: 70px;
            /* background: #ebebeb;*/
            border-radius: 50%;
        }

        .user_rating .star_rating {
            margin-left: 5px;
            margin-top: 13px;
        }

            .user_rating .star_rating li {
                margin-right: -3px;
            }

                .user_rating .star_rating li i {
                    font-size: 10px;
                }


        .review_date {
            color: #fe4c50;
            margin-top: -4px;
        }

        .user_name {
            font-size: 16px;
            font-weight: 500;
            margin-bottom: 18px;
        }

        .review p {
            font-weight: 400;
        }

        /*********************************
        8. Add Review
        *********************************/

        .add_review {
            margin-top: 94px;
        }

        #review_form > div {
            margin-bottom: 40px;
        }

        #review_form div:nth-child(2) h1 {
            display: inline-block;
        }

        #review_form div:nth-child(2) {
            margin-bottom: 20px;
        }

        #review_form > div:last-child {
            margin-bottom: 0px;
        }

        .add_review h1 {
            font-size: 18px;
            font-weight: 500;
        }

        .form_input {
            display: block;
            width: 100%;
            height: 50px;
            border: solid 1px #e5e5e5;
            padding-left: 20px;
        }

        .input_name {
            margin-bottom: 19px;
            margin-top: 31px;
        }

        .input_review {
            display: block;
            width: 100%;
            border: solid 1px #e5e5e5;
            margin-top: 23px;
            padding-left: 20px;
            padding-top: 13px;
        }

        .user_star_rating {
            display: inline-block;
            text-align: left;
            
        }

            .user_star_rating li {
                display: inline-block;
                margin-right: -3px;
                cursor: pointer;
            }

                .user_star_rating li i {
                    color: #f5c136;
                    font-size: 10px;
                   
                }

        .review_submit_btn {
            width: 170px;
            border: none;
            color: #FFFFFF;
            text-transform: uppercase;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
        }

        .content {
            min-height: calc(100% - 330px); /* 60px là chiều cao của footer */
            padding-bottom: 60px; /* Đảm bảo footer không che phủ nội dung */
            overflow-x: hidden;
        }

        footer {
            position: relative;
            bottom: 0;
            width: 100%;
            height: 330px; /* Đặt chiều cao của footer */
        }
    </style>

</head>
<body>
    @{
        var session = Session[Web_Sach.Session.SessionHelper.USER_KEY] as Web_Sach.Session.UserLoginSession;
    }
    <!--Header-->

    <section class="myheader">
        <div class="container pt-3 ">

            <div class="row">
                <!--Cot 1-->
                <div class="col-md-1 ">


                    <img src="/Scripts/Client/logo1.jpg" class="img-fluid" width="150px" alt="logo" />
                </div>

                <!--Cot 2 Tìm kiếm-->
                <div class="col-md-4 ">

                    <form class="input-group" method="get" action="/tim-kiem">
                        <input type="text" class="form-control" id="txtkeyword" name="keyword" placeholder="Search...">
                        <button class="btn btn-dark" id="basic-addon2">
                            <i class="fa fa-search " aria-hidden="true"></i>
                        </button>
                    </form>



                </div>
                <!--Cot 3 tư vấn-->
                <div class="col-md-5">
                    <div class="row">
                        <!--Cột 1 trong cột 3-->
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3 ">
                                    <div class="fs-3 text-danger">
                                        <i class="fa fa-phone" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    Tư vấn hỗ trợ <br>
                                    <strong class="text-danger">098754263</strong>

                                </div>
                            </div>
                        </div>




                        <!--Cột 2 trong cột 3 icon đăng nhập-->
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3 my-3">
                                    <div class="fs-3 text-danger  text-center" style="margin:-19px -55px 0 0; padding: 5px">
                                        @if (session != null)
                                        {
                                            <a href="/thong-tin-nguoi-dung">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </a>
                                        }
                                        else
                                        {

                                            <i class="fa fa-user" aria-hidden="true"></i>

                                        }
                                    </div>
                                </div>
                                @RenderPage("/Views/Shared/TopMenu.cshtml")
                            </div>

                        </div>





                    </div>
                </div>

                <!--Cot 4-->
                <div class="col-md-2">
                    <div class="row">

                        <div class="col me-2">
                            <a href="#" class="position-relative">
                                <span class="fs-3 text-dark">
                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                </span>
                                <span class="position-absolute top-0  start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                    <span class="visually-hidden">unread messages</span>
                                    <!--..-hidden : ẩn nội dung trước mắt-->
                                </span>
                            </a>
                        </div>

                        @{ Html.RenderAction("HeaderCart", "Home");}

                        <!--<div class="col">
                            <a href="#" class="position-relative ">
                                <span class="fs-3 text-dark">
                                    <i class="fa fa-paper-plane" aria-hidden="true"></i>
                                </span>
                                <span class="position-absolute top-0 start-100 translate-middle  badge bg-danger rounded-pill">
                                    0
                                    <span class="visually-hidden">unread messages</span>-->
                        <!--..-hidden : ẩn nội dung trước mắt-->
                        <!--</span>
                            </a>

                        </div>-->

                    </div>

                </div>

                <!--End-->
            </div>
        </div>
    </section>
    <!--Kết thúc header-->
    <!--Menu-->
    <section id="menu" class="mymainmenu bg-danger">
        @{ Html.RenderAction("Menu", "Home");}
        <!-- dùng cho tất cả -->



    </section>

    <!--Kết thúc Menu-->
    <!--Slide-->
    <!--Content-->
    <section class="mymaincontent my-3">


        <div class="container">
            <!--Slider-->
            @RenderSection("slide", false)

            <!--End Slide-->
            <!--Product list-->
            @RenderSection("product", false)
            <!-- gọi đến thì có, k thì thôi-->
            <!--End product list-->








        </div>

    </section>
    @if (TempData["AlertContent"] != null)
    {
        <div id="AlertBox" class="alert  @TempData["AlertMessage"] hide">
            @TempData["AlertContent"]

        </div>}

    <div class="content">
        @RenderBody()
    </div>



    <!--End Content-->
    <!--Footer-->
    @RenderPage("~/Views/Shared/Footer.cshtml")

    <!--End Footer-->


