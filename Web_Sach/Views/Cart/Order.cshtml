
<style>
    #ListStatusOrder .active{
        background-color:orange;
    }
</style>
<div class="wrap">
    @if (TempData["OrderPending"] != null)
    {
        <!-- Nav pills -->
        <ul class="nav nav-pills d-flex flex-row mt-5 mb-5" role="tablist" id="ListStatusOrder">
            <li class="nav-item m-1">
                <a class="nav-link active text-dark" data-bs-toggle="pill" href="#DHDuyet" >Chờ duyệt đơn hàng</a>
            </li>
            <li class="nav-item m-1">
                <a class="nav-link text-dark" data-bs-toggle="pill" href="#DHDongGoi">Đóng gói đơn hàng</a>
            </li>
            <li class="nav-item m-1">
                <a class="nav-link text-dark" data-bs-toggle="pill" href="#DHVanChuyen" >Vận chuyển đơn hàng</a>
            </li>
            <li class="nav-item m-1">
                <a class="nav-link text-dark" data-bs-toggle="pill" href="#DHThanhCong">Đơn hàng giao thành công</a>
            </li>
            <li class="nav-item mt-1">
                <a class="nav-link text-dark" data-bs-toggle="pill" href="#DHThatBai">Đơn hàng giao thất bại</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="DHDuyet" class="container tab-pane active">
                @{Html.RenderAction("OrderPending", "Order");}
            </div>
            <div id="DHDongGoi" class="container tab-pane fade">
                @{Html.RenderAction("OrderPack", "Order");}
            </div>
            <div id="DHVanChuyen" class="container tab-pane fade">
                @{Html.RenderAction("OrderTransport", "Order");}
            </div>
            <div id="DHThanhCong" class="container tab-pane fade">
                @{Html.RenderAction("OrderSuccess", "Order");}
            </div>
            <div id="DHThatBai" class="container tab-pane fade">
                @{Html.RenderAction("OrderFailure", "Order");}
            </div>
        </div>
    }
    else
    {
        <p class="text-bg-danger">Đơn hàng trống</p>
    }

</div>


