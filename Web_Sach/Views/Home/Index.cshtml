@model List<Web_Sach.Models.Silde>

@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listProductNew = (List<Web_Sach.Models.Sach>)ViewBag.listProductNew;
    var listProductTopHot = (List<Web_Sach.Models.Sach>)ViewBag.listProductTopHot;

}
@section slide{

    <div class="slider">


        <div class="container">
            <div class="row slick-slider">
                @foreach (var item in Model)
                {
                    <div class="col-md-12">
                        <img src="@item.Image" class="img-fluid rounded" alt="">
                    </div>

                }


            </div>

        </div>



    </div>
}
@section product{
    @if (ViewBag.updateInfoUser != null)
    {
        <script>

            setTimeout(function () {
                // Hiển thị thông báo trong một khoảng thời gian ngắn
                var isConfirmed = confirm("Cập nhật thông tin thành công!");
            }, 1000);
        </script>
    }
}
<div class="mt-3" id="product">

    <div class="container">

        <!--Title product-->
        <div class="product-title border-bottom">
            <div class="row">
                <div class="col-md-12 ">
                    <h3 class="text-center mt-5">SÁCH MỚI</h3>

                </div>
            </div>

        </div>
        <!--Product list sách mới-->

        <div class="row slick-productNew">

            @foreach (var item in listProductNew)
            {

                var imgUrl = "";
                int? sale = 0;
                var khuyenMai = item.KhuyenMai_Sach.ToList();
                var img = item.Images.FirstOrDefault(s => s.IsDefault);

                if (img != null)
                {
                    imgUrl = img.Image1;
                }

                if (khuyenMai.Count() > 0)
                {// có khuyến mại
                 // kiểm tra xem thời gian khuyến mại
                    foreach (var itemKM in khuyenMai)
                    {// lặp qua danh sách khuyến mại
                        if (DateTime.Now >= itemKM.KhuyenMai.NgayBatDau && DateTime.Now <= itemKM.KhuyenMai.NgayKeThuc)
                        {
                            sale = itemKM.Sale;
                            break;
                        }
                    }
                    var priceSale = item.Price - (item.Price * sale / 100);
                    <div class="col-md-12 product-item my-3 position-relative text-center">

                        <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="@imgUrl" class="img-fluid" alt="san_pham"> </a>
                        @if (sale != 0)
                        {// sale còn hạn
                            <span class=" position-absolute  badge translate-middle  bg-danger" style="top:19px; right: -10px;">-@sale%</span>
                            <p class="fs-5 product-name multi-line">@item.Name</p>


                            <span class="text-dark me-4 ">@(priceSale.HasValue ? priceSale.Value.ToString("N0") :"")</span>
                            <span class="text-bg-danger">
                                <del>@((item.Price.HasValue ? item.Price.Value.ToString("N0") : ""))</del>
                            </span>
                        }
                        else
                        {// sale hết hạn
                            <p class="fs-5 product-name multi-line">@item.Name</p>



                            <span class="text-dark">
                                @((item.Price.HasValue ? item.Price.Value.ToString("N0") : ""))
                            </span>

                        }


                    </div>
                }
                else
                {// không có khuyến mại
                 //var priceSale = item.Price - (item.Price * item.Sale / 100);
                    <div class="col-md-12 product-item my-3 position-relative text-center">

                        <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="@imgUrl" class="img-fluid" alt="san_pham"> </a>
                        @*<span class=" position-absolute  badge translate-middle  bg-danger" style="top:19px; right: -10px;">-@item.Sale%</span>*@
                        <p class="fs-5 product-name multi-line">@item.Name</p>


                        @*<span class="text-dark me-4 ">@(item.Price.HasValue ? item.Price.Value.ToString("N0") :"")</span>*@
                        <span class="text-dark">
                            @((item.Price.HasValue ? item.Price.Value.ToString("N0") : ""))
                        </span>


                    </div>
                }


            }




        </div>
        @*xem all*@
        <p class="row">
            <a href="/sach-moi" style="text-align:right">Xem all</a>
        </p>



        <!-- Sách  bán chạy-->
        <!--Title product-->
        <div class="product-title border-bottom">
            <div class="row">
                <div class="col-md-12 ">
                    <h3 class="text-center mt-5">SÁCH BÁN  CHẠY</h3>

                </div>
            </div>

        </div>
        <!--Product list sách bán chạy-->

        <div class="row slick-productTopHot">

            @foreach (var item in listProductTopHot)
            {
