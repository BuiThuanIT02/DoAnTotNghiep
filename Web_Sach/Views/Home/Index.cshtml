                        <span class="text-dark">
                            @((item.Price.HasValue ? item.Price.Value.ToString("N0") : ""))
                        </span>


                    </div>
                }


            }




        </div>


        @*xem all*@
        <p class="row">
            <a href="/sach-ban-chay" style="text-align:right">Xem all</a>
        </p>






    </div>



</div>


