                    }

                    var priceSale = item.Price - (item.Price * sale / 100);
                    <div class="col-md-12 product-item my-3 position-relative text-center">

                        <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="@imgUrl" class="img-fluid" alt="san_pham"> </a>
