
@model List<Web_Sach.Models.DonHang>


<div class="wrap">


    <div class="container">
        @if (Model != null)
        {

            <div id="order">
                <div class="container">
                    <table class="table table-bordered text-center">
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thông tin</th>
                          
                            <th>#</th>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr id="orderRow_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.NgayDat</td>
                                <td>@(item.TongTien.HasValue ? item.TongTien.Value.ToString("N0") :"")</td>
                                <td style="color: #c21882">Chờ vận chuyển</td>
                                <td>
                                    <a href="#" class=" text-decoration-none getOrer" data-order-id="@item.ID">Đã nhận được hàng</a>
                                </td>
                                <td>
                                    <a href="~/Cart/OrderDetail/@item.ID">Xem chi tiết</a>

                                </td>



                            </tr>

                        }

                    </table>
                </div>

            </div>
        }
        else
        {
            <p class="text-bg-danger">Đơn hàng trống</p>
        }

    </div>




</div>


