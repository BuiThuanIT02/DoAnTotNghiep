
@model List<Web_Sach.Models.DonHang>


<div class="wrap">

    <h6>Đơn hàng chờ xử lý</h6>
    <div class="container">
        @if (Model != null)
        {

            <div id="order">
                <div class="container">
                    <table class="table table-bordered text-center">
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Hủy đơn hàng</th>
                            <th>Thông tin</th>


                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr id="orderRow_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.NgayDat</td>
                                <td>@(item.TongTien.HasValue ? item.TongTien.Value.ToString("N0") :"")</td>

                                <td style="color: #ff8022">Chờ duyệt đơn hàng</td>
                                <td>
                                    <a href="#" data-order-id="@item.ID" class="text-danger text-decoration-none moveOrder">

                                        Hủy
                                    </a>
                                </td>
                                <td>
                                    <a href="~/Cart/OrderDetail/@item.ID">Xem chi tiết</a>

                                </td>



                            </tr>

                        }

                    </table>
            
                </div>







            </div>
        }
        else
        {
            <p class="text-dark">Đơn hàng trống</p>
        }

    </div>




</div>


