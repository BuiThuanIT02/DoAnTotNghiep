@model Web_Sach.Models.TacGia

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Thêm mới tác giả</h2>

<div class="wrap">
    <div class="container-fluid  mt-5 w-50">
        @using (Html.BeginForm("Create", "Author", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TenTacGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenTacGia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.TieuSu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.TieuSu, new { @class = "form-control", @row = "20", @column = "10" })
                        @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group mt-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-dark" />
                        <input type="reset" value="Xóa" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
