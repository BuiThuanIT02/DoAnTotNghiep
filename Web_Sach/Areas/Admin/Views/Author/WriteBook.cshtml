@model Web_Sach.Models.ThamGia

@{
    ViewBag.Title = "WriteBook";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Tác giả viết sách</h2>

<div class="wrap">
    <div class="container-fluid  mt-5 w-50">
        @using (Html.BeginForm("WriteBook","Author",FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mt-2">
                    <label>Tên sách</label>
                    <div class="col-md-10">
                        @Html.DropDownList("MaSach", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <label>Tên tác giả</label>
                    <div class="col-md-10">
                        @Html.DropDownList("MaTacGia", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaTacGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
