@model Web_Sach.Models.TacGia

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="tab-title">CẬP NHẬT TÁC GIẢ</h2>

<div class="wrap">
    <div class="container-fluid  mt-5 w-50">
        @using (Html.BeginForm("Update", "Author", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.TenTacGia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenTacGia, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TenTacGia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    @Html.LabelFor(model => model.TieuSu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.TieuSu, new { @class = "form-control", @row = "20", @column = "20", @style = "width:100%", @id = "txtContent" })
                        @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
                    </div>
                    @*@Html.LabelFor(model => model.TieuSu, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.TieuSu, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TieuSu, "", new { @class = "text-danger" })
                        </div>*@
                </div>


                <div class="form-group mt-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-success submitbtn" />
                    </div>
                </div>
            </div>
        }


    </div>
</div>
<div>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "submitbtn" })
</div>
@section jsFooter{
    <script type="text/javascript">
      var editor = CKEDITOR.replace('txtContent', {
             customConfig: "/Assets/plugins/ckeditor/config.js",

      }); // ckeditor
    </script>

}