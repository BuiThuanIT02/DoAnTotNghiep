@model Web_Sach.Models.NhaXuatBan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center">THÊM MỚI NHÀ XUẤT BẢN</h2>

<div class="wrap">
    <div class="container-fluid  mt-5 w-50">
        @using (Html.BeginForm("Create", "NhaXuatBan", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TenNXB, htmlAttributes: new { @class = "control-label col-md-2", @style = "width:100%" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-2">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-dark" />
                        <input type="reset" value="Xóa" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
